@model IEnumerable<Models.Product>

<div class="container-fluid ">
	<img src="~/Images/book.jpg" class="img-fluid " style=" width:100%; height:600px; border-radius: 20px;" alt="Responsive image">
</div>
<div class="pt-5">
	<div class="text-center text-dark fs-2 fw-medium font-family-Poppins m-0 px-3 py-2">
		<h2>BOOK</h2>
	</div>
	<div id="component" class="container-fluid py-3">
		<p class="text-center text-secondary fs-6 fw-medium font-family-Poppins  m-0 px-3 py-2">
			Order it for you or for your beloved ones
		</p>
	</div>
</div>
<div class="row col-lg-12 pb-3 justify-content-md-center">
	<div class="row  col-lg-11 justify-content-md-center">

		@foreach (var product in Model)
		{
			<div class="col-lg-2 col-md-4 m-2 no-gutters" style=" border-radius: 20px;  height:300px; box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);">
				@if (@product.ImageUrl != null)
				{
					<img src="@product.ImageUrl" class="w-100 h-50 no-gutters" style=" border-radius: 20px; " />
				}
							<div class="pt-1 h-40" >
										<p class=" text-center text-dark fs-6 fw-bold font-family-Poppins  h5 ">@product.Title</p>
										<p class=" text-info">by <b>@product.Author</b></p>
							        <div class="d-flex justify-content-around">
										<p><strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
								        <p><b>$@product.Price100.ToString("0.00")</b></p>
									</div>
						    </div>

						<div class="row justify-content-center mb-5 h-10">
							<div class="row col">
								<div class="bg-light col-4 text-center btn"><i class="bi bi-plus-circle-fill"></i></div>
								<div class="bg-light col-4 text-center">4</div>
								<div class=" col-4 text-center btn" style=" border-radius: 20px; "><i class="bi bi-plus-circle-fill"></i></div>
							</div>
							<div class=" col-6">
								<a asp-controller="Home" asp-action="Detail" class="btn form-control" style="border-radius: 20px; background-color: #84C7AE;" asp-route-id="@product.Id">
									Detail
								</a>
							</div>
						</div>
						
			</div>
	}


</div>
</div>
@page
@model LoginModel


@*  background-image: url("./images/oriental-tiles.png"); *@
<div class="row justify-content-center " style="">
    <div class="col-md-8 lgbox" style="border-radius: 20px;" >
        <section>
            <form id="account" class=" justify-content-center" method="post">
                <h2 class="pb-3 pt-5 text-center font-family-Karla"> log in.</h2>
            
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class=" form-floating mb-3 justify-content-center">
                    <input asp-for="Input.Email" style="margin-left: 30px;border-radius: 20px;width:400px;" class="form-control align-content-center" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" style="margin-left: 30px; class="idStyle form-label">Email</label>
                    <span asp-validation-for="Input.Email" style="margin-left: 30px;" class="text-danger"></span>
                </div>

                <div class="d-flex flex-column  justify-content-center form-floating mb-3">
                    <input asp-for="Input.Password" style="margin-left: 30px;width:400px;border-radius: 20px;" class=" form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" style="margin-left: 30px; class=" idStyle form-label">Password</label>
                    <span asp-validation-for="Input.Password" style="margin-left: 30px;"  class="text-danger"></span>
                </div>
                <div class="checkbox  mb-3 mx-4 d-flex justify-content-between">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                    <p>
                        <a id="forgot-password" class=" text-black" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>

                <div class="d-flex justify-content-center pb-3">
                    <button id="login-submit"  type="submit" class=" btn btn-lg  ">Log in</button>
                </div>
                <div >
        
                    <p class ="pb-2 mx-4">
                        <a asp-page="./Register" class=" text-black" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p class=" pl-5 mx-4">
                        <a id="resend-confirmation" class=" text-black" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

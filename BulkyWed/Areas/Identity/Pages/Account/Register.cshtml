@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row pt-4 justify-content-center">
    <div class="col-md-7 lgbox d-flex flex-column justify-content-center" style="border-radius: 20px;">
        <form id="registerForm" class="row justify-content-center" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class ="pb-4 pt-4 text-center">Create a new account.</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div></div>
            <div class="form-floating py-2 col-10">
                <input asp-for="Input.Email" style="border-radius: 20px;" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" style="margin-left: 30px;"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-5">
                <input asp-for="Input.Name" style="border-radius: 20px;" class="form-control" aria-required="true" />
                <label asp-for="Input.Name" style="margin-left: 30px;"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-5" >
                <input asp-for="Input.PhoneNumber" style="border-radius: 20px;" class="form-control" aria-required="true" />
                <label asp-for="Input.PhoneNumber" style="margin-left: 30px;"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="row justify-content-center col-11">
                <div class="form-floating py-2 col-3">
                    <input asp-for="Input.StreetAddress" style="border-radius: 20px;" class="form-control" aria-required="true" />
                    <label asp-for="Input.StreetAddress" style="margin-left: 30px;"></label>
                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-3">
                    <input asp-for="Input.City" style="border-radius: 20px;" class="form-control" aria-required="true" />
                    <label asp-for="Input.City" style="margin-left: 30px;"></label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-2">
                    <input asp-for="Input.State" style="border-radius: 20px;" class="form-control" aria-required="true" />
                    <label asp-for="Input.State" style="margin-left: 30px;"></label>
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-3">
                    <input asp-for="Input.PostalCode" style="border-radius: 20px;" class="form-control" aria-required="true" />
                    <label asp-for="Input.PostalCode" style="margin-left: 30px;"></label>
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-floating py-2 col-5">
                <input asp-for="Input.Password" style="border-radius: 20px;" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" style="margin-left: 30px;"></label>
                <span asp-validation-for="Input.Password" style="margin-left: 30px;" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-5">
                <input asp-for="Input.ConfirmPassword" style="border-radius: 20px;" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" style="margin-left: 30px;"></label>
                <span asp-validation-for="Input.ConfirmPassword" style="margin-left: 30px;" class="text-danger"></span>
            </div>
            <div class="d-flex  justify-content-cente col-5 pt-3">
                <button id="registerSubmit" type="submit" class="w-100 btn ">Register</button>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}